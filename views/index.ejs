<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1, minimum-scale=1"/>
    <title>GO</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/main.css"/>
</head>
<body>
<div class="container">
    <div class="dialog">
        <p>↖(^ω^)↗ yangyang!</p>

        <p class="hidden">hello yangyang! 火腿肠炒饭好吃吗?</p>
    </div>
    <form>
        <input type="text" id="name" name="name" placeholder="add name..."/>
        <input type="text" id="note" name="note" placeholder="add note..."/>
        <input type="button" id="addBtn" value="add"/>
    </form>
    <div class="list" id="list">
        <h1>note list</h1>
        <ul></ul>
    </div>
</div>
<script>
    $(function () {
        // list
        var $list = $('#list');
        $.ajax({
            url: '/todos',
            method: 'get',
            success: function (list) {
                if (list.length) {
                    for (var i in list) {
                        var $li = $('<li>');
                        $li.append(
                                $('<div class="col name">').text(list[i].name),
                                $('<div class="col note">').text(list[i].note),
                                $('<div class="col action">').append(
                                        $('<input type="button" class="del" value="delete">')
                                )
                        ).attr('data-id', list[i]._id);
                        $list.find('ul').append($li);
                    }
                }
                else {
                    var $p = $('<p class="no-data">add one todo first...</p>');
                    $list.append($p);
                }
            }
        });

        $list.on('click', '.del', function () {
            var id = $(this).parents('li').data('id');
            var params = {
                id: id
            };
            $.ajax({
                url: '/todos',
                method: 'delete',
                data: params,
                success: function (r) {
                    alert('deleted successfully');
                    location.reload();
                }
            });
        });

        //form
        var $name = $('#name'),
                $note = $('#note'),
                $addBtn = $('#addBtn');
        $addBtn.click(function () {
            var params = {
                name: $name.val(),
                note: $note.val() || 'add note...',
                completed: false
            };
            if (!params.name) {
                alert('name required');
                return false;
            }
            $.ajax({
                url: '/todos',
                method: 'post',
                data: params,
                success: function (r) {
                    alert('added successfully');
                    location.reload();
                }
            });
        })
    });
</script>
</body>
</html>


